#!/bin/bash
# -*- coding: utf-8 -*-

if [ ! -L /data/mysql ]; then

    if [ ! -d /data/mysql ]; then
        mkdir -p /data/mysql
        chown mysql:mysql /data/mysql
        cp -rp /var/lib/mysql/* /data/mysql
    fi

    rm -rf /var/lib/mysql
    ln -s /data/mysql /var/lib/mysql

fi

exec /usr/bin/mysqld_safe "$@"
exit $?
